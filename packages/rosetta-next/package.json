{
	"name": "@sylphx/rosetta-next",
	"version": "0.1.2",
	"description": "Next.js integration for @sylphx/rosetta i18n",
	"license": "MIT",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./server": {
			"types": "./dist/server.d.ts",
			"import": "./dist/server.js"
		},
		"./loader": {
			"types": "./dist/loader.d.ts",
			"import": "./dist/loader.js"
		},
		"./sync": {
			"types": "./dist/sync.d.ts",
			"import": "./dist/sync.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "NODE_ENV=production bunup src/index.tsx src/server.tsx src/loader.ts src/sync.ts --dts --external react --external @sylphx/rosetta",
		"dev": "bunup src/index.tsx src/server.tsx src/loader.ts src/sync.ts --dts --external react --external @sylphx/rosetta --watch",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf dist"
	},
	"peerDependencies": {
		"@sylphx/rosetta": ">=0.1.0",
		"next": ">=14.0.0",
		"react": "^18.0.0 || ^19.0.0"
	},
	"devDependencies": {
		"@types/react": "^19",
		"bunup": "^0.10.0",
		"react": "^19.0.0",
		"typescript": "^5"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/SylphxAI/rosetta.git",
		"directory": "packages/rosetta-next"
	},
	"homepage": "https://github.com/SylphxAI/rosetta#readme",
	"bugs": {
		"url": "https://github.com/SylphxAI/rosetta/issues"
	},
	"keywords": [
		"i18n",
		"nextjs",
		"next",
		"translation",
		"rosetta",
		"app-router",
		"server-components"
	]
}
