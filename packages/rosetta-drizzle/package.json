{
	"name": "@sylphx/rosetta-drizzle",
	"version": "0.2.1",
	"description": "Drizzle ORM storage adapter for @sylphx/rosetta",
	"license": "MIT",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./schema": {
			"types": "./dist/schema.d.ts",
			"import": "./dist/schema.js",
			"require": "./dist/schema.cjs"
		}
	},
	"files": ["dist"],
	"scripts": {
		"build": "tsup src/index.ts src/schema.ts --dts --format esm,cjs --external @sylphx/rosetta",
		"dev": "bunup src/index.ts src/schema.ts --dts --format esm,cjs --external drizzle-orm --external @sylphx/rosetta --watch",
		"test": "bun test",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf dist"
	},
	"peerDependencies": {
		"@sylphx/rosetta": ">=0.6.0",
		"drizzle-orm": ">=0.38.0"
	},
	"devDependencies": {
		"@sylphx/rosetta": "workspace:*",
		"@types/better-sqlite3": "^7.6.13",
		"@types/bun": "^1.1.14",
		"@typescript/native-preview": "^7.0.0-dev.20251207.1",
		"better-sqlite3": "^12.5.0",
		"bunup": "^0.16.10",
		"drizzle-orm": "^0.45.0",
		"tsup": "^8.5.1",
		"typescript": "^5"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/SylphxAI/rosetta.git",
		"directory": "packages/rosetta-drizzle"
	},
	"homepage": "https://github.com/SylphxAI/rosetta#readme",
	"bugs": {
		"url": "https://github.com/SylphxAI/rosetta/issues"
	},
	"keywords": ["i18n", "drizzle", "drizzle-orm", "translation", "rosetta", "storage-adapter"]
}
