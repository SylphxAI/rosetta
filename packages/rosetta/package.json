{
	"name": "@sylphx/rosetta",
	"version": "0.1.2",
	"description": "Lightweight i18n library with LLM-powered translation generation",
	"license": "MIT",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./server": {
			"types": "./dist/server/index.d.ts",
			"import": "./dist/server/index.js"
		},
		"./adapters": {
			"types": "./dist/adapters/index.d.ts",
			"import": "./dist/adapters/index.js"
		},
		"./cli": {
			"types": "./dist/cli/index.d.ts",
			"import": "./dist/cli/index.js"
		}
	},
	"bin": {
		"rosetta": "./dist/cli/index.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "bunup src/index.ts src/server/index.ts src/adapters/index.ts src/cli/index.ts --dts",
		"dev": "bunup src/index.ts src/server/index.ts src/adapters/index.ts --dts --watch",
		"test": "bun test",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf dist",
		"lint": "biome check .",
		"format": "biome format --write .",
		"prepublishOnly": "bunx @sylphx/doctor prepublish"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@sylphx/biome-config": "^0.4.1",
		"@sylphx/bump": "^1.6.1",
		"@sylphx/doctor": "^1.32.1",
		"@types/bun": "^1.1.14",
		"bunup": "^0.10.0",
		"lefthook": "^2.0.8",
		"typescript": "^5"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/SylphxAI/rosetta.git",
		"directory": "packages/rosetta"
	},
	"homepage": "https://github.com/SylphxAI/rosetta#readme",
	"bugs": {
		"url": "https://github.com/SylphxAI/rosetta/issues"
	},
	"keywords": [
		"i18n",
		"internationalization",
		"translation",
		"localization",
		"llm",
		"ai-translation"
	]
}
